<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xhj.dddrug.dao.ProteinMapper">
    <select id="selectProteins" parameterType="com.xhj.dddrug.vo.QueryVo" resultType="String">
      select gene_symbol from proteins where gene_symbol in (select pname from drug_protein where dname=#{drugName})
    </select>
    <select id="selectProteinsByList" parameterType="List" resultType="String">
        select gene_symbol from proteins where
        gene_symbol in (select pname from protein_enzyme where (pname in (
        <foreach collection="list" separator="," item="item">#{item}</foreach>
        ) or pname_e in (<foreach collection="list" separator="," item="item">#{item}</foreach>)) and re_type=1)
        or gene_symbol in (select pname_e from protein_enzyme where (pname in (
        <foreach collection="list" separator="," item="item">#{item}</foreach>) or pname_e in (
        <foreach collection="list" separator="," item="item">#{item}</foreach>)) and re_type=1)
    </select>
    <select id="selectProteinsByPage" parameterType="java.util.HashMap" resultType="com.xhj.dddrug.pojo.Protein">
        select * from proteins where gene_symbol in (
        <foreach collection="proteinsGeneSymbol" separator="," item="item">#{item}</foreach>
        ) limit #{vo.rowNumber},#{vo.pageSize}
    </select>
    <select id="queryProteinCount" parameterType="List" resultType="int">
        select count(*) from proteins where gene_symbol in (
          <foreach collection="list" separator="," item="item">#{item}</foreach>
        )
    </select>
    <select id="existsProtein" parameterType="com.xhj.dddrug.vo.ProteinEnzymeVo" resultType="int">
        select count(*) from protein_enzyme where pname=#{pname} and pname_e=#{pname_e}
    </select>
    <select id="existsProtein2" parameterType="com.xhj.dddrug.vo.ProteinEnzymeVo" resultType="int">
        select count(*) from protein_enzyme where pname=#{pname_e} and pname_e=#{pname}
    </select>
    <select id="enterData" parameterType="com.xhj.dddrug.vo.ProteinEnzymeVo">
        insert into protein_enzyme(pname,pname_e) VALUES (#{pname},#{pname_e})
    </select>
    <select id="existsEnzymeMet" parameterType="com.xhj.dddrug.vo.EnzymeMetVo" resultType="int">
        select count(*) from enzyme_metabolites where ename=#{ename} and mname=#{mname}
    </select>
    <select id="enterEnzymeMet" parameterType="com.xhj.dddrug.vo.EnzymeMetVo">
        insert into enzyme_metabolites(ename,mname) VALUES(#{ename},#{mname})
    </select>
    <select id="existProtein" parameterType="String" resultType="int">
        select count(*) from proteins where gene_symbol=#{protein}
    </select>
    <select id="enterProtein" parameterType="String">
        insert into proteins(gene_symbol) VALUES (#{protein})
    </select>
    <select id="existsEnzyme" parameterType="String" resultType="int">
        SELECT  count(*) from enzyme where ename=#{enzyme}
    </select>
    <select id="enterEnzyme" parameterType="String">
        insert into enzyme(ename) VALUES (#{enzyme})
    </select>
    <select id="existsMetabolites" parameterType="String" resultType="int">
        select count(*) from metabolites where mname=#{metabolites}
    </select>
    <select id="enterMetabolites" parameterType="String">
        insert into metabolites(mname) VALUES (#{metabolites})
    </select>
</mapper>